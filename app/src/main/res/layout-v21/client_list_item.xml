<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:elevation="6dp"
    android:focusable="true"
    android:id="@+id/parent"
    android:foreground="@drawable/custom_ripple">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/roboto_regular_400"
            android:lines="1"
            android:text="@string/demo_name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/client_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/roboto_regular_400"
            android:text="@string/demo_code"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/phone_number_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/client_code_tv"
            android:fontFamily="@font/roboto_regular_400"
            android:text="@string/demo_mobile_no"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/optionsMenuTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingStart="20dp"
            android:paddingEnd="16dp"
            android:paddingBottom="20dp"
            android:text="@string/_8942"
            android:background="@drawable/image_button_ripple"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
